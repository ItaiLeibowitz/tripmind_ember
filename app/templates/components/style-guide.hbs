<style>
	#rhs-container {
		border-right-width: {{mapWidth}}px;
	}

	#expanded-map {
		width: {{mapWidth}}px;
		transform: translate3d(-{{mapWidth}}px, 0, 0);
	}

	.action-bar {
		right: {{barRightWidth}}px;
	}

		{{#if hideEditing}}
		.extension-only {
			display: none !important;
		}

		.online-only {
			display: block !important;
		}
		{{/if}}

	{{#if doneCheckExtension}}
		{{#if hasExtension}}
		.has-extension {
			display: block !important;
		}
		{{else}}
		.no-extension {
			display: block !important;
		}
		{{/if}}
	{{/if}}


</style>