<div class="date-name">{{model.title}}</div>

{{items-sorter model=model.items update=true modelToUpdate=model compToUpdate=this addedClass="small"}}
{{map-route items=model.items color=model.color modelForDistance=this}}
{{#if model.items}}
	<div class="time-indicator">
		<div class="radial-progress" data-fun={{funTimeProgress}}>
			<div class="circle fun">
				<div class="mask full">
					<div class="fill"></div>
				</div>
				<div class="mask half">
					<div class="fill"></div>
					<div class="fill fix"></div>
				</div>
			</div>
			<div class="radial-progress base-rotate" data-travel={{travelTimeProgress}}>
				<div class="circle travel">
					<div class="mask full">
						<div class="fill"></div>
					</div>
					<div class="mask half">
						<div class="fill"></div>
						<div class="fill fix"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="inset">
			{{#if funTimeText}}
				<div class="fun icon-pin has-tooltip">{{funTimeText}}
					<div class="tooltip">Fun time</div>
				</div>
			{{/if}}
			{{#if travelTimeText}}
				<div class="travel icon-drive has-tooltip">{{travelTimeText}}
					<div class="tooltip">Travel time</div>
				</div>
			{{/if}}
		</div>
		{{#if timeAwayText}}
			<div class="time-away">{{timeAwayText}}</div>
		{{/if}}
	</div>
	<div class="zoom-date icon-zoom has-tooltip" {{action 'zoomDate'}}>
		<div class="tooltip from-left">Zoom to day</div>
	</div>
{{/if}}
<div class="delete-date icon-trash has-tooltip extension-only" {{action 'deleteDate'}}>
	<div class="tooltip from-left">Remove day</div>
</div>