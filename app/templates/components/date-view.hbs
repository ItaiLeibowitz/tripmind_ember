<div class="date-name">{{model.title}}</div>

{{items-sorter model=model.items update=true modelToUpdate=model addedClass="small"}}
{{map-route items=model.items color=model.color modelForDistance=this}}

<div class="time-indicator">
	<div class="radial-progress" data-travel={{travelTimeProgress}}>
		<div class="circle travel">
			<div class="mask full">
				<div class="fill"></div>
			</div>
			<div class="mask half">
				<div class="fill"></div>
				<div class="fill fix"></div>
			</div>
		</div>
		<div class="radial-progress base-rotate" data-fun={{funTimeProgress}}>
			<div class="circle fun">
				<div class="mask full">
					<div class="fill"></div>
				</div>
				<div class="mask half">
					<div class="fill"></div>
					<div class="fill fix"></div>
				</div>
			</div>
		</div>
	</div>
	<div class="inset">
		{{#if travelTimeText}}
			<div class="travel icon-drive">{{travelTimeText}}</div>
		{{/if}}
		{{#if funTimeText}}
			<div class="fun icon-pin">{{funTimeText}}</div>
		{{/if}}
	</div>
</div>
<div class="delete-date icon-trash has-tooltip extension-only" {{action 'deleteDate'}}>
	<div class="tooltip from-left">Remove day</div>
</div>